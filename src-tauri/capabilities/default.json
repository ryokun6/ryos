{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "default",
  "description": "Capabilities for the default window",
  "windows": ["main"],
  "remote": {
    "urls": [
      "https://os.ryo.lu",
      "https://ryo.lu",
      "http://localhost:*"
    ]
  },
  "permissions": [
    "core:default",
    "shell:allow-open",
    "core:window:allow-start-dragging",
    "core:window:allow-toggle-maximize"
  ]
}

